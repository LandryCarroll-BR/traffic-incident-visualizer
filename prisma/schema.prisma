generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Snapshot {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  snapshotTrafficAlerts TrafficAlert[]
}

model TrafficAlert {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  type         String
  subType      String
  reliability  Float
  locationX    Float
  locationY    Float
  timestamp    DateTime
  timestampUTC DateTime

  snapshotsid String
  snapshots   Snapshot @relation(fields: [snapshotsid], references: [id])
}
